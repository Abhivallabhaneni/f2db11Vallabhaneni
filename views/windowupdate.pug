extends layout 
 
block content 
  h1= title 
 
  - let windowid = toShow._id 
  - let window_type = toShow.window_type 
  - let size = toShow.size
  - let cost = toShow.cost
   
  div.row(class='mb-2') 
    div.mr-1 ID is 
    div #{windowid} 
  - let actionid = "/resource/window/" + windowid 
  form(id='windowForm', action= actionid, method="PUT") 
    div.form-group 
        label.windowAttr(for='window_type') window_type 
        input#window_type(type='text', name='window_type', value= window_type ) 
    div.form-group 
        label.windowAttr(for='size') window size
        input#size(type='text', name='size', value= size ) 
    div.form-group 
        label.windowAttr(for='cost') window cost 
        input#cost(type='number', name='cost', value= cost) 
    input(type="submit") 
 
  script. 
    document.forms['windowForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'PUT', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Update succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Update failed " + error ) 
      }); 
    }); 